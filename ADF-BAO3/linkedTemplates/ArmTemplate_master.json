{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "データ ファクトリ名",
			"defaultValue": "ADF-BAO3"
		},
		"AzureBlobStorageBaoDemo2_connectionString": {
			"type": "secureString",
			"metadata": "'AzureBlobStorageBaoDemo2' の 'connectionString' のセキュリティで保護された文字列"
		},
		"SalesforceBaoDemo2_password": {
			"type": "secureString",
			"metadata": "'SalesforceBaoDemo2' の 'password' のセキュリティで保護された文字列"
		},
		"SalesforceBaoDemo2_securityToken": {
			"type": "secureString",
			"metadata": "'SalesforceBaoDemo2' の 'securityToken' のセキュリティで保護された文字列"
		},
		"SalesforceBaoDemo2_properties_typeProperties_environmentUrl": {
			"type": "string",
			"defaultValue": "https://floboard2-dev-ed.my.salesforce.com"
		},
		"SalesforceBaoDemo2_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "etl.dev.user001@gmail.com"
		},
		"containerUri": {
			"type": "string",
			"metadata": "リンクされた ARM テンプレートを含むストレージ アカウントの URI"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "リンクされた ARM テンプレートを格納するストレージ アカウントへの SAS トークン"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADF-BAO3_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorageBaoDemo2_connectionString": {
						"value": "[parameters('AzureBlobStorageBaoDemo2_connectionString')]"
					},
					"SalesforceBaoDemo2_password": {
						"value": "[parameters('SalesforceBaoDemo2_password')]"
					},
					"SalesforceBaoDemo2_securityToken": {
						"value": "[parameters('SalesforceBaoDemo2_securityToken')]"
					},
					"SalesforceBaoDemo2_properties_typeProperties_environmentUrl": {
						"value": "[parameters('SalesforceBaoDemo2_properties_typeProperties_environmentUrl')]"
					},
					"SalesforceBaoDemo2_properties_typeProperties_username": {
						"value": "[parameters('SalesforceBaoDemo2_properties_typeProperties_username')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "ADF-BAO3_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'ADF-BAO3_ArmTemplate_0')]"
			]
		}
	]
}